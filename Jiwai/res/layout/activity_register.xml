<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:jw="http://schemas.android.com/apk/res/com.sounuo.jiwai"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <include
        android:id="@+id/write_phone_top"
        layout="@layout/title_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_200PX" />

    <!-- 用户名信息 -->

    <RelativeLayout
        android:layout_width="@dimen/DIMEN_860PX"
        android:layout_height="@dimen/DIMEN_602PX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_300PX">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_150PX">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/register_phone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_80PX"
                android:layout_marginLeft="@dimen/DIMEN_120PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="@string/register_phone_hint"
                android:maxLength="11"
                android:textColorHint="@color/text_color_gray"
                android:textSize="@dimen/text_size_42" />
        </RelativeLayout>

        <View
            android:id="@+id/rule_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:layout_marginTop="@dimen/DIMEN_300PX"
            android:background="@color/line_color_gray_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_150PX"
            android:layout_below="@+id/rule_line">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/register_username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_120PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="@string/register_username_hint"
                android:maxLength="4"
                android:textColorHint="@color/text_color_gray"
                android:textSize="@dimen/text_size_42" />
        </RelativeLayout>

        <View
            android:id="@+id/rule_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:layout_marginTop="@dimen/DIMEN_450PX"
            android:background="@color/line_color_gray_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_150PX"
            android:layout_below="@+id/rule_line1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/register_password_et"
                android:layout_width="@dimen/DIMEN_800PX"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_120PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/register_password_hint"
                android:inputType="textPassword"
                android:maxLength="12"
                android:password="true"
                android:textColorHint="@color/text_color_gray"
                android:textSize="@dimen/text_size_42" />
        </RelativeLayout>

        <View
            android:id="@+id/rule_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:layout_marginTop="@dimen/DIMEN_150PX"
            android:background="@color/line_color_gray_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_150PX"
            android:layout_below="@+id/rule_line2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:src="@drawable/vercode" />

            <EditText
                android:id="@+id/register_ver_code_et"
                android:layout_width="@dimen/DIMEN_800PX"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_120PX"
                android:layout_marginTop="@dimen/DIMEN_55PX"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/register_ver_code_hint"
                android:inputType="number"
                android:maxLength="4"
                android:textColorHint="@color/text_color_gray"
                android:textSize="@dimen/text_size_42" />

            <Button
                android:id="@+id/get_regirster_code"
                android:layout_width="@dimen/DIMEN_264PX"
                android:layout_height="@dimen/DIMEN_72PX"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/vercode_bg"
                android:text="获取验证码"
                android:textColor="#F33A51"
                android:textSize="@dimen/text_size_36" />
        </RelativeLayout>

        <View
            android:id="@+id/rule_line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:layout_marginTop="@dimen/DIMEN_600PX"
            android:background="@color/line_color_gray_light" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_1080PX"
        android:background="@drawable/jiwai_btn"
        android:text="登  录"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/DIMEN_74PX" />

    <ProgressBar
        android:id="@+id/login_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>